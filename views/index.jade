extends layout

block header
    script(data-main='js/main.js', src='lib/require.js')

block content
    #content.content
        label(for='uuid') Your UserName:
        input#uuid(type='text')
        br
        label(for='target') Target UserName:
        input#target(type='text', placeholder='Required')
        br
        button#start-signaler(disabled='') Start Signaler
        button#call(style='margin-left:10px;') Call
        button#select-file(style='margin-left:10px;') Select File
        br
        div.example
            #drop_zone Drop files here
            output#list.output-panel
        hr
        output#log
    script(type='text/javascript', src='lib/jquery.js')
    script(type='text/javascript', src='lib/clientjs/dist/client.min.js')
    script(type='text/javascript', src='lib/evercookie/js/evercookie.js')
    //script(type='text/javascript', src='lib/Conzole/conzole.js')
    script(type='text/javascript', src='js/ui.js')
